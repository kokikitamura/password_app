<% provide(:title, "パスワード編集") %>
<h2 class="title">パスワード編集</h2>
<div class="form">
  <%= form_with(model: @password) do |f| %>
    <div class="form-item">
      <%= f.label :title,"タイトル" %>
      <%= f.text_field :title %>
    </div>
    <div class="form-item">
      <%= f.label :account,"アカウント名" %>
      <%= f.text_field :account %>
    </div>
    <div class="form-item">
      <%= f.label :pass,"パスワード" %>
      <%= f.text_field :pass, autocomplete: "off" %>
    </div>
    <div class="form-item">
      <%= f.label :category_id,"カテゴリー" %>
      <div class="select-box">
        <%= f.select :category_id, Category.where(user_id: current_user.id).map{|o| [o.name, o.id]},
          { include_blank: "------" } %>
      </div>
    </div>
    <div class="form-item">
      <%= f.label :url, "URL" %>
      <%= f.text_field :url %>
    </div>
    <div class="form-item">
      <%= f.label :memo, "メモ" %>
      <%= f.text_area :memo %>
    </div>
    <div class="btn-wrapper">
      <%= f.submit "更新", class: "btn btn-blue" %>
    </div>
    <div class="btn-wrapper">
      <%= link_to "削除", @password, class: "btn btn-red",
          data: { "turbo-method": :delete, turbo_confirm: "本当に削除しますか？" } %>
    </div>
  <% end %>
</div>
