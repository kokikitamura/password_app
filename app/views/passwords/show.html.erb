<% provide(:title, "パスワード詳細") %>
<h2 class="title"><%= @password.title %></h2>
<div class="show-item">
  <h3>アカウント名</h3>
  <p id="account"><%= @password.account %></p>
  <button id="account-copy" class="btn-small btn-small-gray">コピー</button>
</div>
<div class="show-item">
  <h3>パスワード</h3>
  <p id="pass"><%= @password.pass %></p>
  <button id="pass-copy" class="btn-small btn-small-gray">コピー</button>
</div>
<div class="show-item">
  <h3>カテゴリー</h3>
  <p><%= link_to @password.category.name, @password.category %></p>
</div>
<div class="show-item">
  <h3>URL</h3>
  <p><%= @password.url %></p>
</div>
<div class="show-item">
  <h3>メモ</h3>
  <p><%= @password.memo %></p>
</div>
<div class="btn-wrapper">
  <%= link_to "編集", edit_password_path(@password), method: :get, class: "btn btn-blue" %>
</div>
