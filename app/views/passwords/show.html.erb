<% provide(:title, "パスワード詳細") %>
<h2 class="title">パスワード詳細</h2>
<div class="show-item">
  <h3>タイトル</h3>
  <p><%= @password.title %></p>
</div>
<div class="show-item">
  <h3>アカウント名</h3>
  <p><%= @password.account %></p>
</div>
<div class="show-item">
  <h3>パスワード</h3>
  <p><%= @password.pass %></p>
</div>
<div class="show-item">
  <h3>URL</h3>
  <p><%= @password.url %></p>
</div>
<div class="show-item">
  <h3>メモ</h3>
  <p><%= @password.memo %></p>
</div>
<div class="center">
  <%= link_to "編集", edit_password_path(@password), method: :get, class: "btn btn-blue" %>
</div>
