<% provide(:title, "ログイン") %>
<h2 class="title">ログイン</h2>
<div class="form">
  <%= form_with(url: login_path, scope: :session) do |f| %>
    <%= f.label :email,"メールアドレス" %>
    <%= f.email_field :email %>

    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password %>

    <%= f.submit "ログイン", class: "btn btn-blue" %>
  <% end %>
  <p><%= link_to "新規登録", new_user_path %></p>
</div>
