<% provide(:title, "ログイン") %>
<h2 class="title">ログイン</h2>
<div class="form">
  <%= form_with(url: login_path, scope: :session) do |f| %>
    <div class="form-item">
      <%= f.label :email,"メールアドレス" %>
      <%= f.email_field :email %>
    </div>

    <div class="form-item">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
    </div>

    <div class="btn-wrapper">
      <%= f.submit "ログイン", class: "btn btn-blue" %>
    </div>
  <% end %>
  <p><%= link_to "新規登録", new_user_path %></p>
</div>
